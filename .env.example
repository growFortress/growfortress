# Database
DATABASE_URL="postgresql://arcade:arcade@localhost:5433/arcade?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Auth
JWT_SECRET="your-jwt-secret-change-in-production-min-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Run Token (HMAC)
RUN_TOKEN_SECRET="your-run-token-secret-change-in-production-min-32-chars"
RUN_TOKEN_EXPIRY_SECONDS=600

# Server
PORT=3000
NODE_ENV="development"

# CORS - comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:5173"

# API prefix for proxied requests
API_PREFIX="/api"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_SUCCESS_URL="http://localhost:5173/shop?success=true"
STRIPE_CANCEL_URL="http://localhost:5173/shop?canceled=true"
