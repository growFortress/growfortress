{
  "name": "arcade-td",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:db": "docker compose up -d",
    "dev:server": "turbo run dev --filter=@arcade/server",
    "dev:web": "turbo run dev --filter=@arcade/web",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prisma:generate": "pnpm --filter @arcade/server prisma:generate",
    "prisma:migrate": "pnpm --filter @arcade/server prisma:migrate",
    "prisma:studio": "pnpm --filter @arcade/server prisma:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
